<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="TitleLight" parent="android:Widget.Holo.Light.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="InvoiceLabel">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="InvoiceTotal">
        <item name="android:drawableTop">@drawable/section_header_underline</item>
        <item name="android:drawableBottom">@drawable/section_header_underline</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">italic</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TicketInvoiceLabel" parent="InvoiceLabel">

    </style>

    <style name="TicketCounterLabel">
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="TicketCounterLabelDark">
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="TicketCounter">
        <item name="android:gravity">center</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@color/card_title_text</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TicketTimer">
        <item name="android:gravity">right</item>
        <item name="android:textSize">50sp</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Hero">
        <item name="android:gravity">center</item>
        <item name="android:textSize">50sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TicketCard">
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/card</item>
    </style>

</resources>
